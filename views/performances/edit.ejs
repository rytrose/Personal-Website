<div class="container">
  <form enctype="multipart/form-data" action="/performances/update/<%= performance.id %>" method="POST" class="form-file">
    <h2 class="form-file-heading">edit performance</h2>

    <% if(flash && flash.err) { %>
      <ul class="alert alert-success" style="list-style: none">
    <% Object.keys(flash.err).forEach(function(error) { %>
      <li><%- flash.err[error].message %></li>
    <% }) %>
  </ul>
  <% } %>

    <input value="<%= performance.name %>" type="text" class="form-control" name="name">
    <input value="<%= performance.type %>" type="text" class="form-control" name="type">
    <input value="<%= performance.date %>" type="text" class="form-control" name="date">
    <input value="<%= performance.link %>" type="text" class="form-control" name="link">
    <textarea name="description" rows="10" style="width:100%"><%= performance.description %></textarea>

    <input type="submit" class="btn btn-default" value="save"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>